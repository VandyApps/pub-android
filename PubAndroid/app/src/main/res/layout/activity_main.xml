<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/brick_texture"
    android:gravity="center_horizontal"
    tools:context="com.vandyapps.pubandroid.MainActivity">

    <ImageView
        android:layout_width="207dp"
        android:layout_height="287dp"
        android:src="@drawable/pub_title" />

    <Button
        android:onClick="checkOrdersClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_check_orders" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_view_menu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_view_hours" />

</LinearLayout>
